/* pages/index/index.wxss */

  .container-row {
    display: flex; /* 使用 Flex 布局 */
    flex-direction: row; /* 横向排布 */
    justify-content: space-between; /* 子组件主轴均匀分布 */
    align-items: center; /* 子组件居中 */
    margin: 20px; /* 外边距为 20px */
  }

  .tab {
    display: flex;
    margin-bottom: 20px;
  }
  
  .tab button {
    flex: 1;
    padding: 10px;
    background-color: #007AFF;
    color: #FFF;
    border: none;
  }

  .switch {
    flex: 1; /* 子元素均分容器宽度 */
    text-align: center;
    background-color: rgb(95, 86, 86); /* 按钮背景颜色 */
    color: white; /* 白色文本颜色 */
    font-size: 16px; /* 默认字号 */
    font-weight: bold; /* 加粗文本 */
    border: none; /* 去除边框 */
    padding: 12px 20px; /* 内边距 */
    cursor: pointer; /* 鼠标悬停时显示手型光标 */
  }
  
  /* 根据当前 tab 修改背景颜色 */
  .switch.active {
    background-color: #007AFF; /* 激活状态下按钮背景颜色 */
    font-size: 16px; /* 激活状态下字号 */
  }
  
  .tab-content {
    display: none;
    flex-direction: column;
    align-items: center;
  }
  
  .question {
    width: 50px;
    margin: 10px;
    padding: 10px;
    background-color: #f3951b;
    color: #FFF;
    border: none;
  }

  canvas {
    width: 100%;
    height: 300px;
    background-color: #EEE;
  }
  
  button {
    margin: 10px;
    padding: 10px;
    background-color: #007AFF;
    color: #FFF;
    border: none;
  }
  
  image {
    width: 100%;
    max-height: 200px;
  }
  